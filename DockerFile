# -------- Base image with Python and Node --------
    FROM node:18-bullseye-slim AS base

    # Set working directory
    WORKDIR /app
    
    # -------- Backend Dependencies --------
    FROM python:3.11-slim AS backend
    
    WORKDIR /app
    
    # Install OpenCV dependencies
    RUN apt-get update && apt-get install -y \
        libgl1-mesa-glx \
        libglib2.0-0 \
        ffmpeg \
        && rm -rf /var/lib/apt/lists/*
    
    # Install Python dependencies
    COPY requirements.txt .
    RUN pip install --no-cache-dir -r requirements.txt
    
    # -------- Frontend Build --------
    FROM base AS frontend
    
    WORKDIR /app/frontend
    
    COPY frontend/package*.json ./
    RUN npm install
    
    COPY frontend ./
    RUN npm run build
    
    # -------- Final Image Combining Both --------
    FROM backend AS final
    
    WORKDIR /app
    
    # Copy backend code
    COPY . .
    
    # Copy built frontend
    COPY --from=frontend /app/frontend/.next ./frontend/.next
    COPY --from=frontend /app/frontend/public ./frontend/public
    COPY --from=frontend /app/frontend/node_modules ./frontend/node_modules
    
    # Expose FastAPI backend on port 8000
    EXPOSE 8000
    
    # Run the FastAPI app
    CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
    